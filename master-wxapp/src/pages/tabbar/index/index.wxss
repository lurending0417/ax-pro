

.home {
    width: 100%;
    height: 100%;
    background: #FFF;
    padding: 0.5rem 0rem;
    display: flex;
}

.home_banner {
    padding: 0rem 0.75rem;
    height: 7.5rem;
    overflow: hidden;
    padding-bottom: 0;
}
.home_banner_image {
    width: 100%;
    height: 7.5rem;
    border-top-left-radius: 0.5rem;
    border-top-right-radius: 0.5rem;
}
.item_content {
    height: 5rem;
    padding: 0rem 0.75rem;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
}
.item {
    height: 3.25rem;
    width: 3.25rem;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

.item_img {
    height: 1.6rem;
    width: 1.6rem;
}
.item_txt {
    font-size: 0.7rem;
    color: #9B9B9B;
    margin-top: 0.25rem;
}

.course_item {
    margin: 0.5rem 0.75rem;
    border-radius: 0.5rem;
    overflow: hidden;
}

.course_img {
    border-radius: 0.5rem;
    /*border: 0.05rem solid #CDCDCD;*/
    width: 100%;
}
.course_tag {
    position: absolute;
    top: -2.7rem;
    left: -2.7rem;
    width: 5rem;
    height: 5rem;
    color: #fff;
    transform: rotate(-45deg);
    display: flex;
    justify-content: flex-end;
    align-items: center;
    flex-direction: column;
    font-size: .6rem;
    background-color: #3388ff;
}