.my-wallet-invite-box {
    height: 4rem;
    background: #fff;
}

.my-wallet-box {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    width: 50%;
    float: left;
    padding: 1rem 0;
}

.my-wallet-box image {
    width: 1.4rem;
    height: 1.4rem;
}

.my-wallet-text {
    font-size: .7rem;
}

.icon {
    width: 1.6rem;
    height: 1.6rem;
    margin-right: .5rem;
}

.my-user-info {
    display: flex;
    height: 4.5rem;
    background: #fff;
    justify-content: center;
    align-items: center;
}

.user-icon {
    position: relative;
    width: 2.5rem;
    height: 2.5rem;
    margin: 0 .75rem;
}

.user-icon .avatar {
    border-radius: 50%;
    width: 100%;
    height: 100%;
}

.my-member {
    font-size: .7rem;
    margin-top: .25rem;
    font-weight: 700;
}

.my-setting {
    font-size: .75rem;
    flex: 1;
    text-align: right;
    margin-right: .75rem;
    line-height: 1.5rem;
}

.ma_stars {
    display: flex;
    flex-direction: row;
}

.ma_star {
    margin-right: 0.2rem;
    height: 0.75rem;
    width: 0.75rem;
}

.master-confirm-icon {
    width: .8rem;
    height: .8rem;
    position: absolute;
    right: 0;
    bottom: 0;
}